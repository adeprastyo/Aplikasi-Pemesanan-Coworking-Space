<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuktiPemesanan">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bukti Pemesanan"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/atas_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="atas nama"
        android:textSize="15dp"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/editNama"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/atas_nama"
        android:hint="Budi Santoso"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:editable="false"/>

    <EditText
        android:id="@+id/editRoom"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editNama"
        android:hint="Ruangan 1"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:editable="false" />

    <EditText
        android:id="@+id/jenis"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editRoom"
        android:hint="Jenis Ruangan"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:editable="false" />

    <EditText
        android:id="@+id/start_datetime"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jenis"
        android:hint="Pilih Tanggal dan Waktu Mulai"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:inputType="none"/>

    <EditText
        android:id="@+id/end_datetime"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_datetime"
        android:hint="Pilih Tanggal dan Waktu Selesai"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:inputType="none" />

    <EditText
        android:id="@+id/harga"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/end_datetime"
        android:hint="Rp50000"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:editable="false" />

    <EditText
        android:id="@+id/status"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/harga"
        android:hint="Berhasil"
        android:textColor="@color/green"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:editable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesan"
        android:layout_below="@+id/status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>